{
  "name": "daisy-ui-component-course",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "docs:dev": "pnpm --filter docs -r docs:dev",
    "docs:build": "pnpm --filter docs -r docs:build",
    "docs:preview": "pnpm --filter docs -r docs:preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write packages",
    "play:vue": "pnpm --filter playground-vue dev",
    "play:nuxt": "pnpm lib:build && pnpm nuxt-module:dev-prepare && pnpm --filter playground-nuxt dev",
    "story:dev": "pnpm --filter daisy-vue story:dev",
    "story:build": "pnpm --filter daisy-vue story:build",
    "story:preview": "pnpm --filter daisy-vue story:preview",
    "lib:build": "pnpm --filter daisy-vue build",
    "nuxt-module:dev-prepare": "pnpm --filter nuxt-daisy-vue dev:prepare",
    "component:new": "hygen component new && pnpm lib:build",
    "directive:new": "hygen directive new && pnpm lib:build",
    "changeset": "npx changeset",
    "changeset:version": "npx changeset version",
    "changeset:publish": "npx changeset publish"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@rushstack/eslint-patch": "^1.3.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.21.1",
    "hygen": "^6.2.11",
    "prettier": "^3.2.5"
  }
}
